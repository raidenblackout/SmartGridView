<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmartGrid.Controls">

    <Style TargetType="local:SmartGridView">
        <Setter Property="SmallCardSize" Value="240,240" />
        <Setter Property="LargeCardSize" Value="720,480" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SmartGridView">
                    <Grid Background="{TemplateBinding Background}">
                        <ItemsRepeater x:Name="PART_Repeater" 
                                       ItemsSource="{TemplateBinding ItemsSource}"
                                       ItemTemplate="{TemplateBinding ItemTemplate}"
                                       VerticalCacheLength="0"
                                       HorizontalCacheLength="0" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
