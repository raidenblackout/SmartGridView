<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmartGrid.Controls">

    <Style TargetType="local:SmartGridView">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SmartGridView">
                    <ScrollViewer>
                        <ItemsRepeater x:Name="PART_Repeater" 
                                       ItemsSource="{TemplateBinding ItemsSource}">
                            <ItemsRepeater.ItemTransitionProvider>
                                <CommonThemeTransitionProvider />
                            </ItemsRepeater.ItemTransitionProvider>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate>
                                    <ContentPresenter Content="{Binding}" 
                                                      ContentTemplate="{Binding ItemTemplate, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
